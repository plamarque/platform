<style type="text/css">
.clearfix {
    *zoom: 1;
}
.clearfix:before,
.clearfix:after {
    display: table;
    content: "";
    line-height: 0;
}
.clearfix:after {
    clear: both;
}

.calendarItem {
    padding: 0px 15px;
    height: 24px;
    line-height: 24px;
}
.calendarItem a {
    color: #333;
}
.calendarItem .addButton {
    display: none;
}
.calendarItem .uiIconAdd {
    width: 14px;
    height: 14px;
    background: url(/homepage-portlets/style/images/calendar/add.png) no-repeat 2px 2px;
}
.calendarItem .colorBox {
    width: 12px;
    height: 12px;
    display: block;
    margin: 6px 5px 0 0;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
}
.calendarItem .calName {
    height: 18px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
    width: 190px;
}
